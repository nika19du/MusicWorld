@using MusicWorld.Services
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicWorld</title>
    <!-- add icon link -->
    <link rel="icon" href="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcR9Ny-k4CDkzw-l6CPASY_onqSC4T2hfZrjLQ&usqp=CAU"
          type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light px-0 mx-auto font-weight-bold" style="background-color:#FFFAFA;height:70px;width:105%!important">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MusicWorld</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-between" id="navbarNav" timeout="2880">
                    <ul class="navbar-nav">
                        <li class="nav-item link">
                            <a class="nav-link text-dark " asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (AccountService.UsrId == null)//ako ne e lognat da se
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Songs/Index">All Songs</a>
                            </li>
                            <ul style="position:absolute;top:0px;right:100px;margin:auto;padding:13px" class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark " href="/Users/Create">Register</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link text-dark " href="/Users/Login">Login</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link text-dark" href="/Users/Logout">Logout</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            @if (AccountService.UserName == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark " href="/Users/All">All Users</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Albums</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item nav-link text-dark" href="/Albums/Index">All Albums</a>
                                        <a class="dropdown-item nav-link text-dark" href="/Albums/Create">Create Albums</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Songs</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item nav-link text-dark" href="/Songs/Index">All Songs</a>
                                        <a class="dropdown-item nav-link text-dark" href="/Songs/Create">Create Songs</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Artists</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item nav-link text-dark" href="/Artists/All">All Artists</a>
                                        <a class="dropdown-item nav-link text-dark" href="/Artists/Create">Create Artist</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Playlists</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item nav-link text-dark" href="/Catalogs/Index">My Playlist</a>
                                        <a class="dropdown-item nav-link text-dark" href="/Catalogs/Create">Create Playlist</a>
                                    </div>
                                </li> 
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Playlists</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item nav-link text-dark" href="/Catalogs/Index">My Playlist</a>
                                        <a class="dropdown-item nav-link text-dark" href="/Catalogs/Create">Create Playlist</a>
                                    </div>
                                </li> 
                            }
                            <ul style="position:absolute;top:0px;right:100px;margin:auto;padding:13px" class="navbar-nav">
                                <li class="nav-item ">
                                    <a class="nav-link text-dark" href="/Users/Logout">Logout</a>
                                </li>
                            </ul>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        @*<footer class="mt-3 mx-auto rounded" style="width: 105%!important;background-color: snow;">
                <div class="container-fluid bg-eventures">
                    <div class="p-1 text-center text-dark">
                        <h5 class="font-weight-normal mt-2">&copy; CopyRight Music World Inc. 2019-2020. All rights reserved.</h5>
                    </div>
                </div>
            </footer>*@
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
